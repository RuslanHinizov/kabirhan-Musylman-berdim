# Race Vision Configuration
# Copy this file to .env and adjust values as needed.

# RTSP default URL (used when no camera-specific URL is set)
RTSP_DEFAULT_URL=rtsp://admin:password@192.168.1.100:554/stream

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# GPU acceleration (overridden by --gpu CLI flag)
USE_GPU=false

# Model paths (relative to project root)
# For TensorRT (RTX 3060): export with tools/export_tensorrt.py, then set:
#   MODEL_PATH_YOLO=yolov8s.engine
MODEL_PATH_YOLO=yolov8s.pt
MODEL_PATH_COLOR=models/color_classifier.pt

# Detection
# Interval between detection cycles (seconds). Lower = higher FPS.
# RTX 3060 TensorRT: 0.08 (12.5 fps), PyTorch: 0.10 (10 fps)
DETECTION_INTERVAL=0.08
DETECTION_MODE=internal

# Max cameras processed per detection cycle
# PyTorch: 5, TensorRT (RTX 3060): 8-10
MAX_CAMERAS_PER_CYCLE=8

# MJPEG streaming
MJPEG_QUALITY=80
MJPEG_FPS=25

# Camera counts
NUM_ANALYTICS_CAMERAS=25
NUM_PTZ_CAMERAS=4

# Track
TRACK_LENGTH=2500

# Logging
LOG_LEVEL=INFO
